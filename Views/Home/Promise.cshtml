
@{
    ViewData["Title"] = "Promise";
}

<h1>Promise</h1>

@section Scripts{
    <script>

            function printSomething(data){
                return new Promise((resolve,reject)=>{
                    setTimeout(()=>{
                        resolve(data)
                    },1000)
                })
            }

        // console.log(printSomething("A"));  //這裡會得到 Promise物件，要取出Promise物件的資料要透過then()
            printSomething("A")
                .then(d=>{
                    console.log(d)
                    return printSomething("B")
                })
            .then(d => {
                console.log(d)
                return printSomething("C")
            })
            .then(d => {
                console.log(d)
            })


    </script>
}